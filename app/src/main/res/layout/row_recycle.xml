<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constantlayout"
        android:layout_width="match_parent"
        android:background="@color/background"
        android:padding="8dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageList"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/image_circle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/txtcarname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Card Name"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:textColor="@color/black"
            android:textSize="22sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageList"/>

        <TextView
            android:id="@+id/txtattack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ataque"
            android:layout_marginEnd="8dp"
            android:textColor="@color/black"
            android:textSize="22sp"
            app:layout_constraintTop_toTopOf="@id/txtcarname"
            app:layout_constraintEnd_toStartOf="@id/txtcost"/>

        <TextView
            android:id="@+id/txtcost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="custo"
            android:layout_marginEnd="8dp"
            android:textColor="@color/black"
            android:textSize="22sp"
            app:layout_constraintTop_toTopOf="@id/txtattack"
            app:layout_constraintEnd_toStartOf="@id/txthelfh"/>

        <TextView
            android:id="@+id/txthelfh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="vida"
            android:textColor="@color/black"
            android:textSize="22sp"
            app:layout_constraintTop_toTopOf="@id/txtcost"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>